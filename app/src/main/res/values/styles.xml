        <item name="colorPrimary">@color/green_800</item>
        <item name="colorPrimaryDark">@color/green_900</item>
        <item name="decorativeIconTintColour">@color/opacity_black_89</item>
        <item name="dividerColour">@color/grey_200</item>
        <item name="fabGlowColour">@color/grey_900</item>
        <item name="fabShimColour">@color/grey_50</item>
        <item name="flashBgColour">@color/opacity_black_89</item>
        <item name="flashFgColour">@color/grey_50</item>
        <item name="hintBalloonBgColour">@color/white</item>
        <item name="hintBalloonOutlineColour">@color/grey_200</item>
        <item name="iconBrightColour">@color/white</item>
        <item name="iconOutlineColour">@color/opacity_black_09</item>
