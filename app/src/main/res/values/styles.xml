<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
        Note: If you use the dot notation to extend a style, and you also include the parent
        attribute, then the parent styles override any styles inherited through the dot notation.
    -->
    <!-- ======================================================================================= -->

    <!-- These are the styles of my custom SplashActivity -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/grey_900</item>
        <item name="android:statusBarColor">@color/grey_900</item>
        <item name="android:navigationBarColor">@color/grey_900</item>
        <item name="android:colorPrimary">@color/green_800</item>
        <item name="android:colorPrimaryDark">@color/green_900</item>
    </style>

    <!-- These styles are applied to the official splash screen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/grey_900</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/no_splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">10</item>
        <item name="postSplashScreenTheme">@style/SplashTheme</item>
    </style>

    <!-- ======================================================================================= -->

    <style name="MyBaseTheme.ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_btn_shape</item>
        <item name="android:backgroundTint">@color/green_800</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyBaseTheme.SpinnerStyle" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:dropDownVerticalOffset">-1dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="MyBaseTheme.SpinnerItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <!-- This is the style of the drop-down's text when collapsed -->
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="MyBaseTheme.SpinnerDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <!-- This is the style of the drop-down's menu items -->
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_marginRight">64dp</item>
    </style>

    <style name="MyBaseTheme.PrimaryTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MyBaseTheme.SecondaryTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyBaseTheme.SerifSecondaryTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="MyBaseTheme.BadgeStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/badge</item>
        <item name="android:textColor">?attr/myBadgeFgColour</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="MyBaseTheme.CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.PopupMenu.Large</item>
        <item name="android:buttonTint">@color/green_800</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="MyBaseTheme.RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.PopupMenu.Large</item>
        <item name="android:buttonTint">@color/green_800</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="MyBaseTheme.ChipGroupStyle" parent="Theme.MaterialComponents">
        <item name="chipSpacingHorizontal">0dp</item><!-- overwritten in Keyboard.kt -->
        <item name="chipSpacingVertical">0dp</item><!-- overwritten in Keyboard.kt -->
        <item name="selectionRequired">false</item>
    </style>

    <style name="MyBaseTheme.ChipStyle" parent="Theme.MaterialComponents">
        <item name="chipCornerRadius">16dp</item>
        <item name="chipStartPadding">8dp</item><!-- overwritten for icons in ProgStudyActivity.kt -->
        <item name="chipEndPadding">8dp</item><!-- rarely relevant since ProgStudyActivity.kt adds a minWidth -->
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="chipMinHeight">8dp</item><!-- overwritten in ProgStudyActivity.kt -->
        <item name="android:minWidth">24dp</item><!-- overwritten in ProgStudyActivity.kt -->
        <item name="android:textSize">24sp</item><!-- overwritten in Keyboard.kt -->
        <item name="android:textAlignment">center</item>
        <item name="android:checkable">false</item>
    </style>

    <style name="MyBaseTheme.SnackbarStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/green_800</item>
    </style>

    <style name="MyBaseTheme.SnackbarTextViewStyle" parent="TextAppearance.AppCompat.Widget.DropDownItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="MyBaseTheme.SnackbarButtonStyle" parent="Widget.AppCompat.Button">
        <!-- This style must be defined for SnackbarTextViewStyle to work! -->
    </style>

