        <!-- styles -->
        <item name="android:buttonStyle">@style/MyBaseTheme.ButtonStyle</item>
        <item name="android:checkboxStyle">@style/MyLightTheme.CheckBoxStyle</item>
        <item name="android:radioButtonStyle">@style/MyLightTheme.RadioButtonStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/MyLightTheme.SpinnerDropDownItemStyle</item>
        <item name="android:spinnerItemStyle">@style/MyLightTheme.SpinnerItemStyle</item>
        <item name="bottomSheetDialogTheme">@style/MyLightTheme.BottomSheetDialog</item>
        <item name="editTextStyle">@style/MyLightTheme.EditTextStyle</item>
        <item name="myAppBarTheme">@style/MyLightTheme.AppBarTheme</item>
        <item name="myBadgeStyle">@style/MyBaseTheme.BadgeStyle</item>
