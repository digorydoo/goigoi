<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/root_view"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingStart="16dp"
  android:paddingEnd="16dp"
  android:paddingTop="8dp"
  android:paddingBottom="8dp"
  android:background="?attr/selectableItemBackground"
  >
    <TextView
      android:id="@+id/primary_text"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      style="?attr/myPrimaryTextStyle"
      tools:text="Primary text"
      />
    <TextView
      android:id="@+id/secondary_text"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_below="@id/primary_text"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      style="?attr/mySecondaryTextStyle"
      tools:text="This is the secondary text. It may be longer, in which case it will wrap around."
      />
    <ImageView
      android:id="@+id/hand_icon"
      android:src="@drawable/ic_point_right_black_24dp"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_alignParentStart="true"
      android:layout_below="@id/secondary_text"
      android:layout_marginStart="16dp"
      android:layout_marginTop="12dp"
      android:tintMode="src_in"
      app:tint="?attr/decorativeIconTintColour"
      android:importantForAccessibility="no"
      />
    <TextView
      android:id="@+id/tertiary_text"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_toEndOf="@id/hand_icon"
      android:layout_alignTop="@id/hand_icon"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="8dp"
      style="?attr/mySecondaryTextStyle"
      tools:text="This is the tertiary text. It may be longer, in which case it will wrap around."
      />
</RelativeLayout>
