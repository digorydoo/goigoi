<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/root_view"
  android:layout_width="match_parent"
  android:layout_height="64dp"
  android:paddingStart="8dp"
  android:paddingEnd="8dp"
  android:background="?attr/selectableItemBackground"
  >
    <!-- image_view.padding will be set by ListItemViewHolder -->
    <ImageView
      android:id="@+id/image_view"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_marginStart="8dp"
      android:importantForAccessibility="no"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      />
    <TextView
      android:id="@+id/primary_text"
      android:ellipsize="end"
      android:maxLines="1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginStart="16dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toEndOf="@id/image_view"
      app:layout_constraintEnd_toStartOf="@id/badge"
      style="?attr/myPrimaryTextStyle"
      tools:text="This is the word or unyt's primary text"
      />
    <TextView
      android:id="@+id/badge"
      android:maxLines="1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="8dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      style="?attr/myBadgeStyle"
      tools:text="JLPT N5"
      />
    <TextView
      android:id="@+id/secondary_text"
      android:ellipsize="end"
      android:maxLines="1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="12dp"
      android:layout_marginStart="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@id/image_view"
      app:layout_constraintEnd_toEndOf="parent"
      style="?attr/mySecondaryTextStyle"
      tools:text="This is the word or unyt's secondary text"
      />
</androidx.constraintlayout.widget.ConstraintLayout>
